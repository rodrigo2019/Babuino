#include <boot.h>
#include <loader.c>

#org 0x3800
void main()
{
char c=0x00;
int i=0;

   while(c!=0x07){
      if(kbhit())c=getc();
      if(++i>40)break;
      delay_ms(1);
   }
   if(c==0x07)
   {
      printf("\r\nBootloader Version 1.0\r\n");
      putc(0x07);
   
      load_program();
   }
   
   while(TRUE)
   {
      //TODO: User Code
   }

}
#org default
